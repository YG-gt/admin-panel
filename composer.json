{
    "name": "eptllc/paranoia-matrix",
    "description": "Old-school Matrix Synapse admin panel that just works",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "EPTLLC",
            "email": "mail.easypro.tech@gmail.com",
            "homepage": "https://www.easypro.tech"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox",
        "test-coverage": "phpunit --colors=always --testdox --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
} 